extends ../layouts/default
include ../mixins/image

block title
	!= book.name
	
block content
	div.section.group.content-header
		div.col.span_3_of_12
			+imageTag(book.photo)
			div.details
				p 
					a.filter-link(href='/catalogue?filter=' + book.category.slug)= book.category.singulier
					if book.details.width && book.details.height
						span!= " - " + book.details.width + " x " + book.details.height
					if book.details.nbPages					
						span!= " - " + book.details.nbPages+"p"	
		div.col.span_7_of_12.desc
			h2= book.name
			h3
				each author in book.author
					a.author-link(href='/auteurs/' + author.slug)=author.name
					br
			h4 #{book.date}
			p!= book.content.extended
